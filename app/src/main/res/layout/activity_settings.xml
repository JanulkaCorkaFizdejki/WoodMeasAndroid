<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wm_gray_dark"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/include11"
        layout="@layout/top_bar_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_green_medium_bg"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="16dp"
                android:paddingRight="4dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_ruler_yellow" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="@string/unit_of_measurement"
                        android:textAllCaps="true"
                        android:textColor="@color/wm_other_yellow_1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroupMeasurementSystem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingBottom="2dp"
                        android:text="@string/metric_system"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:paddingStart="4dp"
                        tools:ignore="RtlSymmetry,SmallSp" />

                    <RadioButton
                        android:id="@+id/radioButtonMetricSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_light_green_bg"
                        android:text="@string/unit_measurement_cm_m"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:buttonTint="@color/white" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingBottom="2dp"
                        android:text="@string/imperial_system"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="RtlSymmetry,SmallSp"
                        android:paddingStart="4dp" />

                    <RadioButton
                        android:id="@+id/radioButtonImperialSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_light_green_bg"
                        android:text="@string/unit_measurement_in_ft"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:buttonTint="@color/white" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_green_medium_bg"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="16dp"
                android:paddingRight="4dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_map"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="@string/location"
                        android:textAllCaps="true"
                        android:textColor="@color/wm_other_yellow_1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingBottom="2dp"
                    android:text="@string/use_location_info"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    tools:ignore="RtlSymmetry,SmallSp" />

                <RadioButton
                    android:id="@+id/radioButtonOnOffLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_light_green_bg"
                    android:text="@string/apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:buttonTint="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>