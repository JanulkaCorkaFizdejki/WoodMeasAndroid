<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wm_gray_dark"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/include11"
        layout="@layout/top_bar_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_green_medium_bg"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="24dp"
                android:paddingRight="4dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded,UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_ruler_yellow"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_of_measurement"
                        android:textAllCaps="true"
                        android:textColor="@color/wm_other_yellow_1"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroupMeasurementSystem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:paddingBottom="2dp"
                        android:text="@string/metric_system"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="RtlSymmetry,SmallSp" />

                    <RadioButton
                        android:id="@+id/radioButtonMetricSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_light_green_bg"
                        android:text="@string/unit_measurement_cm_m"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:buttonTint="@color/white" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:paddingBottom="2dp"
                        android:text="@string/imperial_system"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="RtlSymmetry,SmallSp" />

                    <RadioButton
                        android:id="@+id/radioButtonImperialSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_light_green_bg"
                        android:text="@string/unit_measurement_in_ft"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:buttonTint="@color/white" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_green_medium_bg"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="24dp"
                android:paddingRight="4dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_process"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/method_measuring_logs"
                        android:textAllCaps="true"
                        android:textColor="@color/wm_other_yellow_1"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp">

                    <ImageButton
                        android:id="@+id/imageButtonEndMeasMethod"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_left_green_light"
                        android:contentDescription="@string/end_diameter"
                        android:onClick="setLogMeasMethod"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_top_meas"
                        tools:ignore="UsingOnClickInXml" />

                    <ImageButton
                        android:id="@+id/imageButtonCenterMeasMethod"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_right_white"
                        android:contentDescription="@string/center_diameter"
                        android:onClick="setLogMeasMethod"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageButtonEndMeasMethod"
                        app:srcCompat="@drawable/ic_center_meas_green_light"
                        tools:ignore="UsingOnClickInXml" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/end_diameter"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="RtlHardcoded,SmallSp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slash"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/center_diameter"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_green_medium_bg"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="16dp"
                android:paddingRight="4dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_map"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="@string/location"
                        android:textAllCaps="true"
                        android:textColor="@color/wm_other_yellow_1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <RadioButton
                    android:id="@+id/radioButtonOnOffLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_light_green_bg"
                    android:text="@string/apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:buttonTint="@color/white" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingBottom="2dp"
                    android:text="@string/use_location_info"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    tools:ignore="RtlSymmetry,SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_green_medium_bg"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="24dp"
                android:paddingRight="4dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_note_yellow"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/package_notes"
                        android:textAllCaps="true"
                        android:textColor="@color/wm_other_yellow_1"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkBoxAddNoteToEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_light_green_bg"
                    android:onClick="checkboxNoteOnClick"
                    android:text="@string/add_to_emails"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:buttonTint="@color/white"
                    tools:ignore="UsingOnClickInXml" />

                <CheckBox
                    android:id="@+id/checkBoxAddNoteToPdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_light_green_bg"
                    android:onClick="checkboxNoteOnClick"
                    android:text="@string/add_to_pdf"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:buttonTint="@color/white"
                    tools:ignore="UsingOnClickInXml" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>